<% if @maptype == 'am-utils' -%>
/defaults	type:=nfsl;opts:=rw
<% end -%>
<% if @maptype == 'am-utils' -%>
audio		rhost:=unkle;rfs:=/datapool/media/audio
music		rhost:=unkle;rfs:=/datapool/media/audio
<% else -%>
audio		unkle:/datapool/media/audio
music		unkle:/datapool/media/audio
<% end -%>
<% if @maptype == 'am-utils' -%>
mirror		type:=auto;fs:=<%= @mapdir -%>/amd_mirror;pref:=null;opts:=fullybrowsable
<% else -%>
mirror		-fstype=autofs,browse file:<%= @mapdir -%>/auto.mirror
<% end -%>
<% if @maptype == 'am-utils' -%>
redist		rhost:=unkle;rfs:=/datapool/software/redist
video		rhost:=unkle;rfs:=/datapool/media/video
album_art	rhost:=unkle;rfs:=/datapool/media/images;sublink=album_art
music-staging	rhost:=unkle;rfs:=/datapool/media/INCOMING;sublink=music-staging
os-images	rhost:=unkle;rfs:=/datapool/software/os-images
<% else -%>
redist		unkle:/datapool/software/redist
video		unkle:/datapool/media/video
album_art	unkle:/datapool/media/images/album_art
music-staging	unkle:/datapool/media/INCOMING/music-staging
os-images	unkle:/datapool/software/os-images
<% end -%>
<% if @maptype == 'am-utils' -%>
upload_music	fs:=${autodir}/cifs/${rhost}/${key};type:=program;opts:=rw,guest;rhost:=unkle;rfs:=upload_music;mount:="/sbin/mount.cifs mount.cifs -o ${opts} \\\/\\\/${rhost}/${rfs} ${fs}" 
<% else -%>
upload_music	-fstype=cifs,rw,guest ://unkle/upload_music
<% end -%>
