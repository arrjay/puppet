[<%= @share -%>]
  path = <%= @path %>
<% {'browseable'=>'browseable',
    'printable'=>'printable',
    'writeable'=>'writeable',
    'public'=>'public',
    'hide_unreadable'=>'hide unreadable'}.each do |var,samba|-%>
<%   x = scope[var] -%>
<%   if x -%>
  <%= samba -%> = yes
<%   else -%>
  <%= samba -%> = no
<%   end -%>
<% end -%>
<% {'description'=>'comment',
    'create_mask'=>'create mask',
    'dir_mask'=>'directory mask'}.each do |var,samba|-%>
<%   x = scope[var] -%>
<%   if x != :undef -%>
  <%= samba -%> = <%= x %>
<%   end -%>
<% end -%>
