general {
	uid = "<%= @daap_user -%>"
	logfile = "<%= @forked_daapd_log -%>"
	db_path = "<%= @forked_daapd_db -%>"
	loglevel = log
	admin_password = "unused"
	ipv6 = no
}

# Library configuration
library {
	name = "<%= @servername -%>"
	port = <%= @port %>
<% if @password -%>
	password = "<%= @password -%>"
<% end -%>
	directories = { "/srv/music" }
<% if @podcast_dir != '' -%>
	podcasts = { "/<%= @podcast_dir -%>" }
<% end -%>
<% if @audiobook_dir != '' -%>
	audiobooks = { "/<%= @audiobook_dir -%>" }
<% end -%>
<% if @compilation_dir != '' -%>
	compilations = { "/<%= @compilations_dir -%>" }
	compilation_artist = "<%= @compilation_artist -%>"
<% end -%>

# There are 5 default playlists: "Library", "Music", "Movies", "TV Shows"
# and "Podcasts". Here you can change the names of these playlists.
#       name_library    = "Library"
#       name_music      = "Music"
#       name_movies     = "Movies"
#       name_tvshows    = "TV Shows"
#       name_podcasts   = "Podcasts"
#       name_audiobooks = "Audiobooks"

# Artwork file names (without file type extension)
# forked-daapd will look for jpg and png files with these base names
<% unless @artwork_names.empty? -%>
	artwork_basenames = { <% @artwork_names.each do |name| -%>
"<%= name -%>",<% end -%> }
<% end -%>

<% unless @ignore_filetypes.empty? -%>
	filetypes_ignore = { <% @ignore_filetypes.each do |extension| -%>
"<%= extension -%>",<% end -%> }
<% end -%>

<% if @filescan_disable -%>
	filescan_disable = false
<% end -%>

# Formats: mp4a, mp4v, mpeg, alac, flac, mpc, ogg, wma, wmal, wmav, aif, wav
# Formats that should never be transcoded
<% unless @skip_transcode.empty? -%>
	no_transcode = { <% @skip_transcode.each do |extension| -%>
"<%= extension -%>",<% end -%> }
<% end -%>

<% unless @force_transcode.empty? -%>
	force_transcode = { <% @force_transcode.each do |extension| -%>
"<%= extension -%>",<% end -%> }
<% end -%>
}

